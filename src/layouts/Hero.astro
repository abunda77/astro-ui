---
import { TypewriterEffectSmoothDemo } from "@/components/custom/HeroSection";
import { BorderBeam } from "@/components/magicui/border-beam.tsx";
const { title } = Astro.props;
---

{/* Hero Section */}

<div class="relative py-20 overflow-hidden hero-background overlay">
  <BorderBeam />
  <div class="container relative z-10 px-6 mx-auto">
    <div class="max-w-4xl mx-auto text-center text-white">
      <h2 class="mb-4 text-2xl">The #1 Professional Property Agent</h2>

      <TypewriterEffectSmoothDemo client:load />
      <!-- <h1 class="mb-4 text-4xl font-bold sm:text-6xl gradient-text">
        Professional business headshots, without a physical photo shoot
      </h1> -->
      <p class="mb-8 text-xl">
        Dapatkan akses properti terbaik di area Anda. Kami siap membantu Anda
        menemukan hunian yang sempurna untuk gaya hidup Anda.
      </p>
      <div class="flex justify-center space-x-4">
        <button
          class="px-6 py-3 text-lg font-semibold text-white rounded-md bg-gradient-to-r from-teal-400 to-blue-500 hover:from-pink-500 hover:to-orange-500"
        >
          Get your headshots →
        </button>
        <button
          class="px-6 py-3 text-lg font-semibold text-gray-800 bg-gray-200 rounded-md"
        >
          For companies & teams
        </button>
      </div>
      <div class="mt-8">
        <span class="text-yellow-400">★★★★★</span>
        <span class="ml-2">13,228,221+ AI headshots already created</span>
      </div>
    </div>
  </div>
</div>
{/* search global  */}

<div
  class="container relative z-20 px-4 mx-auto sm:px-6 headshot-generator-container"
  style="margin-top: -50px;"
>
  <div
    class="max-w-sm p-4 mx-auto bg-white rounded-lg shadow-lg sm:max-w-none headshot-generator-card"
  >
    <h3
      class="mb-3 text-lg font-semibold text-center text-gray-800 sm:text-xl headshot-generator-title"
    >
      Generate Your Professional Headshot
    </h3>
    <div class="flex flex-col sm:flex-row">
      <input
        type="text"
        placeholder="Enter your preferences (e.g., business casual, outdoor)"
        class="w-full px-3 py-2 mb-2 text-sm border-2 border-gray-300 rounded-md sm:mb-0 sm:rounded-r-none focus:outline-none focus:border-blue-500 headshot-generator-input"
      />
      <button
        class="w-full px-4 py-2 text-sm font-medium text-white transition duration-300 bg-blue-600 rounded-md sm:w-auto sm:rounded-l-none hover:bg-blue-700 headshot-generator-button"
        >Generate</button
      >
    </div>
    <div
      class="mt-2 text-xs text-center text-gray-600 sm:text-sm headshot-generator-popular"
    >
      Popular: Business, Casual, Studio, Outdoor
    </div>
  </div>
</div>

<style>
  @keyframes backgroundMove {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
  .hero-background {
    background-image: linear-gradient(
        rgba(17, 24, 39, 0.8),
        rgba(17, 24, 39, 0.8)
      ),
      url("images/banner01.jpg");
    background-size: 90% 100%;
    background-position: center;
    animation: backgroundMove 50s ease infinite !important;
  }

  .gradient-text {
    background: linear-gradient(90deg, #4ade80, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  @media (min-width: 640px) {
    .headshot-generator-container {
      margin-top: -100px;
    }
    .headshot-generator-card {
      max-width: 42rem; /* ~672px, equivalent to max-w-2xl */
      padding: 1.5rem;
    }
    .headshot-generator-title {
      font-size: 1.25rem;
    }
    .headshot-generator-input {
      font-size: 1rem;
      padding: 0.75rem 1rem;
    }
    .headshot-generator-button {
      font-size: 1rem;
      padding: 0.75rem 2rem;
    }
    .headshot-generator-popular {
      font-size: 0.875rem;
    }
  }
</style>
