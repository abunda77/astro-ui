---
import { ModeToggle } from "@/components/custom/ModeToggle";

import LoginButtons from "@/components/custom/LoginButtons";
import HeaderClientScript from "@/components/custom/HeaderClientScript";
import HeaderMenu from "@/components/custom/HeaderMenu";
import MainNavigation from "@/components/custom/MainNavigation";
import {
  Menu,
  X,
  House,
  Building2,
  Landmark,
  Warehouse,
  Calculator,
  GlobeLock,
  ShieldCheck,
  PersonStanding,
} from "lucide-react";

type MenuItem = {
  title: string;
  path?: string;

  icon?: any;
  badge?: boolean;
  items?: { title: string; path: string; icon?: any }[];
};
const menuitems: MenuItem[] = [
  { title: "Beranda", path: "/", icon: House },
  {
    title: "Properti",
    icon: Building2,
    items: [
      { title: "Rumah", path: "/properti/rumah", icon: House },
      { title: "Apartemen", path: "/properti/apartemen", icon: Building2 },
      { title: "Kavling", path: "/properti/kavling", icon: Landmark },
      { title: "Office", path: "/properti/kavling", icon: Landmark },
      { title: "Warehouse", path: "/properti/warehouse", icon: Landmark },
    ],
  },
  { title: "Calculator KPR", path: "/calculator", icon: Calculator },
  { title: "Blog", path: "/blog", icon: Calculator },
  {
    title: "About Us",
    icon: PersonStanding,
    items: [
      { title: "Our Profile", path: "/about", icon: PersonStanding },
      { title: "Layanan", path: "/layanan", icon: ShieldCheck },
      { title: "Privacy", path: "/privacy", icon: GlobeLock },
      { title: "FAQ", path: "/faq", icon: GlobeLock },
    ],
  },
  { title: "Kontak", path: "/contact", icon: Warehouse },
];

import "rsuite/dist/rsuite-no-reset.min.css";
---

<header class="w-full bg-gray-100 shadow-md dark:bg-gray-900">
  <div class="px-4 mx-auto container-lg">
    <div class="flex items-center justify-between h-16">
      {/* Logo and Welcome Message */}
      <div class="flex items-center ml-10 space-x-4">
        <div class="flex-shrink-0">
          <a href="/">
            <img
              id="themeLogo"
              class="w-auto h-10"
              alt="Logo"
              src="/images/logo.svg"
            />
          </a>
        </div>
      </div>
      {/* Desktop Menu */}
      <div class="hidden lg:flex">
        <div class="justify-center flex-1 hidden ml-80 md:flex">
          <MainNavigation client:load menuitems={menuitems} />
        </div>
      </div>

      {/* Right side items */}
      <div class="items-center hidden mr-10 space-x-8 lg:flex">
        <!-- <AvatarComponent client:load /> -->
        <LoginButtons client:load />

        <div
          id="welcomeMessage"
          class="text-sm font-medium dark:text-gray-300 animate-pulse"
        >
        </div>
        <div class="items-end hidden space-x-8 md:flex">
          <ModeToggle client:load />
        </div>
      </div>
      {/* Mobile menu */}
      <HeaderMenu client:load menuitems={menuitems} />
    </div>
  </div>
</header>

<HeaderClientScript client:load />

